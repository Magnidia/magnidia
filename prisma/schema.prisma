generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Event {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique @default(0)
  name        String
  price       Float    @default(0)
  date        DateTime
  images      String[]
  description String   @default("No description provided")
  address     String   @default("Not specified")
  cityState   String   @default("Not specified")
  latitude    Float    @default(0)
  longitude   Float    @default(0)
  creator     User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  Ticket      Ticket[]

  @@index([date])
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  username String   @default("No username provided")
  profPic  String // url to an image in an S3 bucket: Profile Picture
  address  String
  tickets  Ticket[]
  events   Event[] //  Events created BY this User
}

model Ticket {
  id           Int      @id @default(autoincrement())
  userId       Int
  eventId      Int
  purchaseDate DateTime
  valid        Boolean
  user         User     @relation(fields: [userId], references: [id])
  event        Event    @relation(fields: [eventId], references: [id])
}
