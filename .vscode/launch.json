  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "command": "docker compose up",
      "name": "Postgres Container",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "psql -h localhost -p 5432 -U postgres -d magnidia_dev",
      "name": "Connect to DB",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "BROWSER=none pnpm dev",
      "name": "pnpm dev",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm build",
      "name": "pnpm build",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm start",
      "name": "pnpm start",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm lint",
      "name": "pnpm lint",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
